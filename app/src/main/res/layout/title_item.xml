<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_comment"
    tools:context="od.chat.ui.fragment.ChatFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/spacing_minor"
            android:textColor="@color/blue_letter"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_toLeftOf="@+id/img_edit"
            android:layout_toRightOf="@+id/iv_icon"
            android:maxLines="1"
            android:text="test" />

        <TextView
            android:id="@+id/tv_create_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignLeft="@+id/tv_username"
            android:layout_alignStart="@+id/tv_username"
            android:layout_toLeftOf="@+id/img_edit"
            android:text="data"
            android:maxLines="1"
            android:layout_toStartOf="@+id/img_edit" />


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingRight="@dimen/spacing_minor"
            android:paddingTop="@dimen/spacing_minor"
            android:paddingBottom="@dimen/spacing_minor"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/img_delete"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="@dimen/spacing_minor"
            android:paddingTop="@dimen/spacing_minor"
            android:paddingBottom="@dimen/spacing_minor"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/img_edit"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/img_delete"
            android:layout_toStartOf="@+id/img_delete"
            android:background="?attr/selectableItemBackground" />

</RelativeLayout>
