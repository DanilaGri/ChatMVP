<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/comment"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_major"
        tools:context="od.chat.ui.fragment.ChatFragment">

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_comment"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_toEndOf="@+id/iv_comment"
            android:layout_toRightOf="@+id/iv_comment"
            android:text="Small Text"
            android:textColor="@color/blue_letter"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_create_date_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_toEndOf="@+id/iv_comment"
            android:layout_toRightOf="@+id/iv_comment"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_comment"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <View
            android:id="@+id/view"
            style="@style/AppTheme.SeparatorHorizontal"
            android:layout_below="@+id/tv_txt_comment" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
